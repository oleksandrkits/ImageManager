.text-center
  %h2 Add new kitty to database
  =image_tag params[:url]
  %br/
  %br/
  = form_with(model: @image, local: true) do |form|
    .row
      .col
      .col
        .field
          = form.text_field :url, class: 'form-control', placeholder: 'Image url'
        .actions
          = form.submit 'Add', class: 'btn btn-primary'
      .col